void Beep()
{
   Beeper_On();
   _delay_ms(25);
   Beeper_Off();
}

void BeepBeep()
{
   Beeper_On();
   _delay_ms(25);
   Beeper_Off();   
   _delay_ms(200);
   Beeper_On();
   _delay_ms(25);
   Beeper_Off();
}

void Beep_Error()
{
   Beeper_On();
   _delay_ms(250);
   Beeper_Off();
}
